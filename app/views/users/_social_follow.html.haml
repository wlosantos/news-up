#user-follow.modals
  %h3.has-text-centered.mb-2 #{ t 'request_friend'}
  - if user_signed_in?
    %table.table.is-striped.is-fullwidth
      %thead
        %th #{ t 'name'}
        %th #{ t 'username'}
        %th{colspan: 3, style: 'width: 10px'}
      %tbody
      - pending_list(current_user.id).each do |friend|
        %tr{class: "tr_social-#{friend.id}"}
          %td #{ friend.name }
          %td #{ friend.username }
          %td
            = link_to :list_posts, class: 'btn-accept', data:{modal_id: "#{set_follow(current_user.id, friend.id)}"} do
              %i.far.fa-thumbs-up
          %td
            = link_to '#', class: 'btn-bloqued' do
              %i.fas.fa-user-lock
          %td
            = link_to '#', class: 'btn-trash' do
              %i.fas.fa-trash-alt
